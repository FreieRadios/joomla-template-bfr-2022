<?xml version="1.0" encoding="utf-8"?>
<extension type="template" method="upgrade" client="site">
	<name>bfr-2022</name>
	<version>1.0.3</version>
	<creationDate>February 2017</creationDate>
	<author>Mliebler</author>
	<authorEmail>michael-liebler@janguo.de</authorEmail>
	<copyright>(C) 2022 Open Source Matters</copyright>
	<description>BFR Joomla Template</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>joomla.asset.json</filename>
		<filename>offline.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>scss</folder>
	</files>
	<positions>
		<position>menu</position>
		<position>below-top</position>
		<position>search</position>
		<position>banner</position>
		<position>top-a</position>
		<position>top-b</position>
		<position>main-top</position>
		<position>main-bottom</position>
		<position>breadcrumbs</position>
		<position>left</position>
		<position>right</position>
		<position>bottom-a</position>
		<position>bottom-b</position>
		<position>footer</position>
		<position>debug</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/tpl_bfr-2022.ini</language>
		<language tag="en-GB">en-GB/tpl_bfr-2022.sys.ini</language>
		<language tag="de-DE">de-DE/tpl_bfr-2022.ini</language>
		<language tag="de-DE">de-DE/tpl_bfr-2022.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field
						name="reorderGrid"
						type="list"
						default="left-col-top"
						label="Grid-Sortierung mobil"	>
					<option value="main-content-top">Hauptinhalt nach oben</option>
					<option value="left-col-top">Linke Spalte nach oben</option>
					<option value="right-col-top">Rechte Spalte nach oben</option>
				</field>
				<field
					name="logoFile"
					type="media"
					default=""
					label="TPL_BFR_2022_LOGO_LABEL"
				/>

				<field
					name="siteTitle"
					type="text"
					default=""
					label="TPL_BFR_2022_TITLE"
					filter="string"
				/>

				<field
					name="siteDescription"
					type="text"
					default=""
					label="TPL_BFR_2022_TAGLINE"
					filter="string"
				/>


				<field
					name="noteFontScheme"
					type="note"
					label="TPL_BFR_2022_FONT_NOTE_TEXT"
					heading="p"
					class="alert alert-warning"
				/>

				<field
					name="colorName"
					type="list"
					default="colors_standard"
					label="TPL_BFR_2022_COLOR_NAME_LABEL"
					>
					<option value="colors_standard">TPL_BFR_2022_COLOR_NAME_STANDARD</option>
					<option value="colors_alternative">TPL_BFR_2022_COLOR_NAME_ALTERNATIVE</option>
				</field>

				<field
					name="fluidContainer"
					type="radio"
					layout="joomla.form.field.radio.switcher"
					default="0"
					label="TPL_BFR_2022_FLUID_LABEL"
					>
					<option value="0">TPL_BFR_2022_STATIC</option>
					<option value="1">TPL_BFR_2022_FLUID</option>
				</field>

				<field
					name="stickyHeader"
					type="radio"
					label="TPL_BFR_2022_STICKY_LABEL"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="integer"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field
					name="backTop"
					type="radio"
					label="TPL_BFR_2022_BACKTOTOP_LABEL"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="integer"
					>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
